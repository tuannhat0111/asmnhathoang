{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    
    <div class="form-group">
        <label for="name">Name:</label>
        {{ form_widget(form.name,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Task name'
            }
        }) }} 
    </div>
    <div class="form-group">
        <label for="brand">Brand:</label>
        {{ form_widget(form.brand,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Task brand'
            }
        }) }} 
    </div>
    <div class="form-group">
        <label for="quantity">Quantity:</label>
        {{ form_widget(form.quantity,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Task quantity'
            }
        }) }} 
    </div>
    <div class="form-group">
        <label for="price">Price:</label>
        {{ form_widget(form.price,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Task price'
            }
        }) }} 
    </div>
    </div>
    <div class="form-group">
        <label for="information">Information:</label>
        {{ form_widget(form.information,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Task information'
            }
        }) }} 
    </div>

    <input type="submit" name="typeProduct_create" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
